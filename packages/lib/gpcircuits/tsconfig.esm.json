{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/esm",
    "module": "ESNext",
    "tsBuildInfoFile": "./tsconfig.esm.tsbuildinfo"
  },
  // For CJS/ESM builds, do not include test files
  "include": ["src", "src/*.json", "artifacts/*.json", "src/*.json"],
  "exclude": ["dist", "build", "node_modules", "src/internal.ts"],
  // DO NOT MODIFY MANUALLY BEYOND THIS POINT
  // References are automatically maintained by `yarn fix-references`
  "references": [
    {
      "path": "../pod/tsconfig.esm.json"
    },
    {
      "path": "../util/tsconfig.esm.json"
    }
  ]
}
